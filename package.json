{
  "name": "file-type-pipe",
  "version": "1.0.1",
  "description": "Use file-type to automatically set the Content-Type header on a ServerResponse",
  "license": "ISC",
  "author": "Emily Marigold Klassen <forivall@gmail.com>",
  "homepage": "https://github.com/forivall/file-type-pipe",
  "repository": {
    "type": "git",
    "url": "git@github.com:forivall/file-type-pipe.git"
  },
  "bugs": {
    "url": "https://github.com/forivall/file-type-pipe/issues"
  },
  "scripts": {
    "lint": "xo",
    "lint-staged": "lint-staged",
    "inspect": "jsinspect",
    "test": "ava",
    "posttest": "npm run lint && npm run inspect",
    "test-cov": "nyc ava",
    "posttest-cov": "npm run posttest",
    "test-ci": "npm run test-cov",
    "posttest-ci": "nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "index.js"
  ],
  "keywords": [],
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "dependencies": {
    "bl": "^1.2.1",
    "file-type": "^7.1.0"
  },
  "bundledDependencies": [],
  "peerDependencies": {},
  "devDependencies": {
    "@types/node": "^8.0.40",
    "ava": "^0.22.0",
    "coveralls": "^3.0.0",
    "eslint-config-mxo": "^0.5.3",
    "jsinspect": "^0.12.6",
    "nyc": "^11.0.3",
    "xo": "^0.18.0"
  },
  "xo": {
    "semicolon": false,
    "extends": [
      "mxo"
    ],
    "ignores": [
      "**/fixtures/**"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "test/**",
            "test.js",
            "test-*.js",
            "**/__tests__/**",
            "**/*.test.js",
            "scripts/**"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "test/**",
          "test.js",
          "test-*.js",
          "**/__tests__/**",
          "**/*.test.js"
        ],
        "extends": [
          "mxo/ava"
        ]
      }
    ]
  }
}
